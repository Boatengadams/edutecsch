rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    /* ==============================
       CORE HELPERS
    ============================== */

    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc(uid) {
      return firestore.get(/databases/(default)/documents/users/$(uid));
    }

    function userExists(uid) {
      return firestore.exists(/databases/(default)/documents/users/$(uid));
    }

    function isSuperAdmin() {
      return request.auth.token.email in [
        'bagsgraphics4g@gmail.com',
        'boatengadams4g@gmail.com'
      ];
    }

    function isAdmin() {
      return isSuperAdmin() ||
        (userExists(request.auth.uid) &&
         userDoc(request.auth.uid).data.role == 'admin');
    }

    function isApproved() {
      return isSignedIn() &&
        (isSuperAdmin() ||
         (userExists(request.auth.uid) &&
          userDoc(request.auth.uid).data.status == 'approved'));
    }

    /* ==============================
       USER UPLOADS (AVATARS, FILES)
    ============================== */

    match /users/{userId}/{allPaths=**} {
      allow read: if isSignedIn();

      allow write: if request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024;
    }

    /* ==============================
       SCHOOL CONFIG FILES
    ============================== */

    match /schoolConfig/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ==============================
       DIRECT MESSAGE MEDIA
    ============================== */

    match /direct_messages/{conversationId}/{allPaths=**} {
      allow read, write: if isApproved()
        && request.auth.uid in
          firestore.get(
            /databases/(default)/documents/conversations/$(conversationId)
          ).data.participantUids;
    }

    /* ==============================
       FLYERS / PUBLIC ASSETS
    ============================== */

    match /flyers/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ==============================
       VIDEO CONTENT
    ============================== */

    match /videoContent/{userId}/{allPaths=**} {
      allow read: if isApproved();

      allow write: if isApproved()
        && request.auth.uid == userId
        && request.resource.size < 50 * 1024 * 1024;
    }

    /* ==============================
       TEACHING MATERIALS
    ============================== */

    match /teachingMaterials/{allPaths=**} {
      allow read: if isApproved();
      allow write: if isApproved()
        && request.resource.size < 20 * 1024 * 1024;
    }

    /* ==============================
       ASSIGNMENT FILES
    ============================== */

    match /assignments/{allPaths=**} {
      allow read: if isApproved();
      allow write: if isApproved()
        && request.resource.size < 20 * 1024 * 1024;
    }

    /* ==============================
       DEFAULT DENY
    ============================== */

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
